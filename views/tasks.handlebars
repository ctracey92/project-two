{{> sidebar/sidebar taskNav=true}}

<div class="pageContentContainer">
  {{> subnav this}}
  <div class="listContainer">
    <h2>My Tasks</h2>
    <ul class="tasks">
      {{#each tasks}}
        <li class="taskLinkContainer">
          <a class="taskLink" href="project/{{Project.id}}/{{id}}">
            <div class="icon">
              <i class="fas fa-thumbtack {{getStatusClass TaskStatusId}}"></i>
              <span>{{getStatus TaskStatusId}}</span>
            </div>
            <div class="taskDetails">
                <span class="dueDate">
                  <i class="far fa-calendar-alt"></i> Due Date: <span>{{formatDate goal_start}}</span>
                </span>
                <h3>{{task_name}}</h3>
                <p>{{task_description}}</p>
                <span class="taskProject">
                  <i class="fas fa-clipboard"></i> {{Project.project_name}}
                </span>
            </div>
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

{{> project/create-project users=users }}
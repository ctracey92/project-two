{{> sidebar/sidebar projNav=true }}

<div class="pageContentContainer">

  {{> subnav this}}

  <div class="project">
    <h1>{{project.project_name}}</h1>
    <div class="taskContainer">
      <div class="taskList">
        <ul>
          {{#each project.Tasks}}
            <a href="/project/{{../project.id}}/{{id}}" class="taskLink {{isActive ../activeTask.id id}}">
              <span>{{task_name}}</span>
               {{!--<span class={{getStatusClass this.taskStatus}}></span> --}}
            </a>
          {{/each}}
        </ul>
        <button class="button-gray-small-light createTask">
          <i class="fas fa-thumbtack"></i>
          Add a Task
        </button>
      </div>

      <div class="taskDetailsContainer">
        {{#if activeTask}}

            <div class="task">
              <article>
                <h2>{{activeTask.task_name}}</h2>
                <div class="taskDetails">
                  <span>Due Date</span>
                  {{> status-select}}
                </div>

                <p>{{activeTask.task_description}}</p>
              </article>

            </div>

           {{!--  {{> comment/comments }} --}}

        {{else}}
        <div class="task">
          <article>
            <h2>Project Desciption</h2>
            <p>{{project.project_description}}</p>
            <p>Select or add a task to start working.</p>
          </article>
        </div>
        {{/if}}

      </div>
    </div>
  </div>

</div>

{{> project/create-task users=users }}